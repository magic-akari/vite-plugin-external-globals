{
    "compilerOptions": {
        "rootDir": "src",
        "outDir": "lib",
        "module": "esnext",
        "target": "esnext",
        "moduleResolution": "bundler",
        "lib": [
            "esnext"
        ],
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "sourceMap": true,
        "declaration": true,
        "declarationMap": true,
        "skipLibCheck": true
    }
}
